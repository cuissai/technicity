<h1>Survey Questions</h1>
<br/>
<p><%= link_to raw('<i class="icon-plus-sign"></i> Add survey question'), new_survey_question_path, class: 'btn' %></p>

<table class="table table-striped">
  <tbody>

    <% @survey_questions.each do |survey_question| %>
      <tr>
        <td><%=	survey_question.question %></td>
        <td>
          <%= link_to 'Edit', edit_survey_question_path(survey_id: @survey_id, id: survey_question.id) %> |
          <%= link_to 'Delete', survey_question_path(survey_id: @survey_id, id: survey_question.id),
                      method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to raw('<i class="icon-ok icon-white"></i> Continue to regions'),
            new_region_path(study_id: @study.id, region_set_id: @study.region_set_id), class: 'btn btn-primary' %>

