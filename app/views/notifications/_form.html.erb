<%= simple_form_for(@notification) do |f| %>
  <%= f.error_notification %>
  <p>Fill in the following information, and we'll email you when StreetSeen is ready to use!
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
