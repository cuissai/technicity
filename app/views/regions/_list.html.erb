<table class="table table-striped table-hover">
  <tr>
    <th></th>
    <th>Name</th>
    <% if show_user  %>
      <th>User</th>
    <% end %>
    <th># Locations Included</th>
    <th># Image Sets Using</th>
    <th>Public</th>
  </tr>
<% @regions.each do |region| %>
  <tr>
    <td><img src="http://maps.googleapis.com/maps/api/streetview?size=150x80&amp;location=<%= @region.latitude %>,%20<%= @region.longitude %>&amp;sensor=false"></td>
    <td><%= link_to region.name, region %></td>
    <% if show_user  %>
      <td><%= region.user_id %></td>
    <% end %>
    <td><%= region.locations.count %></td>
    <td><%= region.region_sets.count %></td>
    <td><%= region.public %></td>
  </tr>
<% end %>
</table>
