<table class="table table-striped table-hover">
  <tr>
    <th><%= sortable_column "Username", :column => "username" %></th>
    <th><%= sortable_column "Email", :column => "email" %></th>
    <th><%= sortable_column "Admin", :column => "admin" %></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><% if user.admin %> Yes <% else %> No <% end %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
  </tr>
<% end %>
</table>

