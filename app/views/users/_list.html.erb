<table class="table table-striped table-hover">
  <tr>
    <th></th>
    <th><%= sortable_column "Name", :column => "name" %></th>
    <th><%= sortable_column "User", :column => "username" %></th>
    <th><%= sortable_column "Email", :column => "email" %></th>
    <th><%= sortable_column "Admin", :column => "admin" %></th>
    <th># Studies</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to user.name, user %></td>
    <td><%= link_to user.username, user %></td>
    <td><%= user.email %></td>
    <td><% if user.admin %> Yes <% else %> No <% end %></td>
    <td><%= user.studies.length %> </td>
  </tr>
<% end %>
</table>

<%= will_paginate(@users) %>
